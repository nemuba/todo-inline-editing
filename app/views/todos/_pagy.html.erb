<ul class="pagination">
  <% if pagy.prev %>
    <li class="page-item">
      <%= link_to 'Previous', url_for(page: pagy.prev), class: 'page-link', data: { turbo_stream: 'todos' } %>
    </li>
  <% else %>
    <li class="page-item disabled">
      <a class="page-link" href="#">Previous</a>
    </li>
  <% end %>

  <% pagy.series.each do |item| %>
    <% if item.is_a?(Integer) %>
      <li class="page-item <%= 'active' if item == pagy.page %>">
        <%= link_to item, url_for(page: item), class: 'page-link', data: { turbo_stream: 'todos' } %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#"><%= item %></a>
      </li>
    <% end %>
  <% end %>

  <% if pagy.next %>
    <li class="page-item">
      <%= link_to 'Next', url_for(page: pagy.next), class: 'page-link', data: { turbo_stream: 'todos' } %>
    </li>
  <% else %>
    <li class="page-item disabled">
      <a class="page-link" href="#">Next</a>
    </li>
  <% end %>
</ul>
