<%= form_with(model: todo) do |form| %>
  <%= render_error(todo) %>

  <div class="col-md-12">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: class_error(todo, :title) %>
  </div>

  <div class="col-md-12">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: class_error(todo, :description) %>
  </div>

  <div class="col-md-12">
    <%= form.label :status, style: "display: block" %>
    
    <%= form.radio_button :status, "pending" %> Pending
    <%= form.radio_button :status, "completed" %> Completed
  </div>

  <div class="d-flex justify-content-between mt-5">
    <button type="button" class="btn btn-danger" data-bs-dismiss="offcanvas" aria-label="Close">
      <i class="bi bi-x-square"></i> Close
    </button>
    <button type="submit" class="btn btn-primary" data-bs-dismiss="offcanvas" aria-label="Close">
      <i class="bi bi-save"></i> Save
    </button>
  </div>
<% end %>
